<% if @place.errors.any? %>
  <ul>
    <% @place.errors.full_messages.each do |msg|%>
      <%= msg %>
    <%end%>
  </ul>
<% end %>

<%= form_for [:admin,@place] do |f|%>
  <%= f.label "Name of place" %>
  <%= f.text_field :name %>
  <hr />
  <%= f.label "Menu URL" %>
  <%= f.text_field :menu_url %>
  <hr />
  <%= f.label "Show place in main list?" %>
  <%= f.check_box :show %>
  <hr />
  <%= f.submit 'Save' %>
<%end %>
