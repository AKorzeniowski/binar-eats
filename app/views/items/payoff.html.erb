<div class="container ">
  <h1>
    Payment confirmation for Item <%= @item.id %> from order <%= link_to "#{ @item.order.id} - #{@item.order.place.name} ", "#{orders_path}/#{@item.order.id}" %>
  </h1>

<%= form_for @item do |f| %>

  <div class="form-group">
    <%= f.label "Your order from ", align: :center%>
    <%= link_to "menu ", "#{@item.order.place.menu_url}" %><br>
    <%= f.text_area :food, cols: 50, rows: 5, disabled: true %>
  </div>
  <hr/>

  <div class="form-group">
    <%= label_tag "Full costs: "%>
    <%= f.number_field :cost, value: @item.cost, disabled: true %>
  </div>
  <hr />
  <%= link_to 'Confirm payment',item_payoff_confirm_path, data: { confirm: 'Are you sure?' }, class: 'btn btn-info', method: :post  %>
  <%= link_to 'Cancel', orders_path, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'  %>
<% end %>
</div>

