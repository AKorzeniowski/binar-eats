<table>
  <%= form_for @order do |f| %>
  <%= f.hidden_field :creator_id, value: current_user.id %>
  <tr>
    <td>Select place</td>
    <td><%= collection_select(:order, :place_id, Place.all, :id, :name) %></td>
  </tr>
  <tr>
    <td><%= check_box_tag :orderer  %></td>
    <td>I want to be a orderer.</td>
  </tr>
  <tr>
    <td><%= check_box_tag :deliverer  %></td>
    <td>I want to be a deliverer.</td>
  </tr>
  <tr>
    <td>Deadline</td>
    <td><%= f.time_select :deadline, {minute_step: 1} %></td>
  </tr>
  <tr colspan="2">
    <td><%= f.submit 'Save' %></td>
    <td><%= link_to 'Cancel', orders_path, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'  %></td>
  </tr>
</table>
<% end %>
