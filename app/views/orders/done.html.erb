<h3>Link to menu</h3>
<input type="text_area" value="<%= url_for(action: "new", id:@order_id, controller: 'items', only_path: false, protocol: 'https') %>"
id="myInput">
<button onclick="myFunction()">Copy link</button>

<script>
function myFunction() {

  var copyText = document.getElementById("myInput");

  copyText.select();

  document.execCommand("copy");

  alert("Copied the text: " + copyText.value);

}
</script>
