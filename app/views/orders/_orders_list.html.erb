<table class="table table-dark">
  <tr>
    <th>Place name</th>
    <th>Order deadline</th>
    <th>Action</th>
  </tr>
  <% collection.each do |order| %>
    <tr>
      <td><%= order.place.name %></td>
      <td><%= order.deadline %></td>
      <td>
        <% if DateTime.now < order.deadline %>
          <% if collection == @my_orders %>
            <%= link_to '✏️ Edit', edit_order_path(order.id), class: 'btn btn-info' %>
          <% end %>
          <%= link_to '🛒 Items', order_items_url(order.id), class: 'btn btn-primary' %>
        <% else %>
          🕗 Deadline has passed 
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
