<h1>Nowe zam√≥wienie</h1>

<table>
  <%= form_for @order do |f| %>
  <tr>
    <td>Select place</td>
    <td><%= collection_select(:order, :place_id, Place.all, :id, :name) %></td>
  </tr>
  <tr>
    <td colspan="2">Select orderer</td>
  </tr>
  <tr>
    <td><%= f.radio_button :orderer_id, current_user.id, :checked => true %><label>Ja</label></td>
    <td><%= f.radio_button :orderer_id, nil, :checked => true %><label>Ostatni</label></td>
  </tr>
  <tr>
    <td colspan="2">Select deliverer</td>
  </tr>
  <tr>
    <td><%= f.radio_button :deliverer_id, current_user.id, :checked => true %><label>Ja</label></td>
    <td><%= f.radio_button :deliverer_id, nil, :checked => true %><label>Ostatni</label></td>
  </tr>
  <tr>
    <td>Deadline</td>
    <td><%= f.time_select :deadline, {minute_step: 1} %></td>
  </tr>
  <tr colspan="2">
    <td><%= f.submit 'Save' %></td>
  </tr>
</table>



<% end %>
