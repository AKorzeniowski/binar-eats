<table class="table table-dark">
  <tr>
    <th>Food name</th>
    <th>Food cost</th>
  </tr>
  <% collection.each do |item| %>
    <tr>
      <td><%= item.food %></td>
      <td><%= item.cost %></td>
      <% if collection == @creator_order_items %>
        <td><%= link_to 'Edit', item_path(item.id), class: 'btn btn-info' %></td>
      <% end %>
      <% if collection == @other_order_items %>
        <td><%= item.user.email %></td>
      <% end %>
    </tr>
  <% end %>
  <% if collection == @creator_order_items %>
    <tr>
      <td colspan="3"><%= link_to 'Add', order_path, class: 'btn btn-success' %></td>
    </tr>
  <% end %>
</table>
