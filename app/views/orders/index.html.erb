<div class="container">
  <h1>My orders</h1>
  <% if @my_orders.size > 0 %>
    <%= render 'orders_list', :collection => @my_orders %>
  <% else %>
    <h3>You don't have any orders. 😞 Why not <%= link_to "create one", new_order_path  %>?</h3>
  <% end %>
  <h1>Others' orders</h1>
  <% if @other_orders.size > 0 %>
    <%= render 'orders_list', :collection => @other_orders %>  
  <% else %>
    <h3>Nobody else wants to eat. 😱</h3>
  <% end %>
</div>
