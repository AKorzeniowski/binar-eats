<div class="container">
	<h1>Edit your profile</h1>
	<%= form_for @user, url: 'profile#update' do |f| %>
	  <div class="form-group">
	    <%= f.label :nickname %> </br>
	    <%= f.text_field :nickname, autocomplete: "off", class: 'col-md-3'  %>
	  </div>
	  <div class="form-group">
	    <%= f.label :account_number %> (26 digits) </br>
	    <%= f.text_field :account_number, autocomplete: "off", size: 32,  class: 'col-md-3', pattern: '[0-9]{26}' %>
	  </div>
	  <div class="form-group">
		<%= f.submit 'Save', role: 'button', class: 'btn btn-primary' %>
	  </div>
	<% end %>
</div>